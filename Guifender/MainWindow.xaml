<Window x:Class="Guifender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Guifender"
        mc:Ignorable="d"
        Title="Guifender" Height="450" Width="800">
    
    <DockPanel>
        
        <StatusBar DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Status: Ready" Margin="5"/>
                <TextBlock Text=" | " Margin="5"/>
                <TextBlock Text="User: Admin" Margin="5"/>
            </StackPanel>
        </StatusBar>
        <TabControl>
            <TabItem Header="Status">
                <ScrollViewer>
                    <Grid x:Name="ComputerStatusGrid" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Scan">
                <TextBlock Text="Content for Tab 2" Margin="10"/>
            </TabItem>
            <TabItem Header="Update">
                <TextBlock Text="Content for Tab 2" Margin="10"/>
            </TabItem>
            <TabItem Header="Config">
                <TextBlock Text="Content for Tab 2" Margin="10"/>
            </TabItem>
            <TabItem Header="About">
                <TextBlock Text="Content for Tab 2" Margin="10"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
